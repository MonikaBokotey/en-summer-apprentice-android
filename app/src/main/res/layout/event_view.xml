<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Event Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/eventCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="2dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Event Image -->
            <ImageView
                android:id="@+id/eventPhoto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/untold4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/eventPhoto"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <!-- Event Title -->
                <TextView
                    android:id="@+id/customTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Untold"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <!-- Event Description -->
                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Largest festival in Cluj-Napoca"
                    android:textColor="#2b2524"
                    android:textSize="15sp" />

                <!-- Event Date -->
                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Date: 2023-08-15"
                    android:textColor="#2b2524"
                    android:textSize="15sp" />

                <!-- Event Location -->
                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Location: Cluj-Napoca"
                    android:textColor="#2b2524"
                    android:textSize="15sp" />

                <!-- Buy Tickets Button -->
                <Button
                    android:id="@+id/customButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy tickets" />

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
