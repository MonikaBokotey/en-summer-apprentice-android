<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/eventLayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <!-- Event Title -->
        <TextView
            android:id="@+id/customTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Untold"
            android:textColor="#000000"
            android:textSize="20sp" />

        <!-- Event Description -->
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Largest festival in Cluj-Napoca"
            android:textColor="#2b2524"
            android:textSize="15sp" />

        <!-- Event Date -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Date: 2023-08-15"
            android:textColor="#2b2524"
            android:textSize="15sp" />

        <!-- Event Location -->
        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Location: Cluj-Napoca"
            android:textColor="#2b2524"
            android:textSize="15sp" />

        <!-- Buy Tickets Button -->
        <Button
            android:id="@+id/customButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy tickets" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/eventLayout2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/eventLayout">

        <!-- Event Title -->
        <TextView
            android:id="@+id/customTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elctric Castle"
            android:textColor="#000000"
            android:textSize="20sp" />

        <!-- Event Description -->
        <TextView
            android:id="@+id/descriptionTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muzica electronica si nu numai"
            android:textColor="#2b2524"
            android:textSize="15sp" />

        <!-- Event Date -->
        <TextView
            android:id="@+id/dateTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Date: 2023-08-15"
            android:textColor="#2b2524"
            android:textSize="15sp" />

        <!-- Event Location -->
        <TextView
            android:id="@+id/locationTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Location: Bontida"
            android:textColor="#2b2524"
            android:textSize="15sp" />

        <!-- Buy Tickets Button -->
        <Button
            android:id="@+id/customButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy tickets" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/eventLayout3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/eventLayout2">

        <!-- Event Title -->
        <TextView
            android:id="@+id/customTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meci de fotbal"
            android:textColor="#2b2524"
            android:textSize="20sp" />

        <!-- Event Description -->
        <TextView
            android:id="@+id/descriptionTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fotbal"
            android:textColor="#2b2524"
            android:textSize="15sp" />

        <!-- Event Date -->
        <TextView
            android:id="@+id/dateTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Date: 2023-08-15"
            android:textColor="#2b2524"
            android:textSize="15sp" />

        <!-- Event Location -->
        <TextView
            android:id="@+id/locationTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Location: Cluj-Napoca"
            android:textColor="#2b2524"
            android:textSize="15sp" />

        <!-- Buy Tickets Button -->
        <Button
            android:id="@+id/customButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy tickets" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="262dp"
        android:layout_height="438dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="169dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stadion" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="224dp"
        android:layout_height="400dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="287dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/electriccastle" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="260dp"
        android:layout_height="500dp"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="370dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/untold4" />


</androidx.constraintlayout.widget.ConstraintLayout>
